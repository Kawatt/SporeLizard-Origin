{
    "name": "Liquid Body",
    "description": "You can crawl at any time and fit through tight tunnels.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": [
                "Press [",
                {
                    "keybind": "key.sneak"
                },
                "] to start crawling."
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": [
                "Press [",
                {
                    "keybind": "key.jump"
                },
                "] to stop crawling."
            ]
        }
    ],
    "type": "apoli:multiple",
    "swim": {
        "type": "apoli:swimming",
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:on_block"
                },
                {
                    "type": "apoli:fluid_height",
                    "fluid": "water",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:fluid_height",
                    "fluid": "lava",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_upwards",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_n",
                    "comparison": ">",
                    "compare_to": 1
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_crawling",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        }
    },
    
    "upwards": {
        "type": "apoli:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false,
            "bar_index": 1
        }
    },
    "looking_up": {
        "type": "apoli:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "apoli:change_resource",
            "resource": "*:*_upwards",
            "operation": "set",
            "change": 0
        },
        "falling_action": {
            "type": "apoli:change_resource",
            "resource": "*:*_upwards",
            "operation": "set",
            "change": 1
        },
        "condition": {
            "type": "origins:command",
            "command": "execute if entity @s[x_rotation=0..-90]",
            "comparison": "==",
            "compare_to": 0
        }
    },

    "crawling": {
        "type": "apoli:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "start_crawl": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_crawling",
            "operation": "set",
            "change": 1
        },
        "key": {
            "key": "key.sneak"
        }
    },
    "end_crawl": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_crawling",
            "operation": "set",
            "change": 0
        },
        "key": {
            "key": "key.jump"
        }
    },
    "swim_speed": {
        "type": "origins:modify_velocity",
        "modifier": {
          "amount": -0.4,
          "operation": "multiply_total_multiplicative"
        },
        "axes": [
          "x",
          "z"
        ],
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:fluid_height",
                    "fluid": "water",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:swimming"
                }
            ]
        }
    }


    ,"n": {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "hud_render": {
            "should_render": false
        }
    },
    "decay": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_n",
            "change": -1
        },
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_n",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "key": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_n",
            "change": 2
        },
        "key": {
            "key": "key.forward",
            "continuous": true
        }
    }
}